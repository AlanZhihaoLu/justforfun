{
    "name": "Follow Link Check",
    "description": "Verifies hyperlink follow if not part of root.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html"
    }
  }